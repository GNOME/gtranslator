#!/bin/sh
#######################################################################
### Another pre-parsing script for gtranslator ; Fatih Demir 
### [ kabalak@gmx.net ] 
#######################################################################
ddir=~/.gtranslator
#######################################################################
[ -d $ddir ] || mkdir $ddir
#######################################################################
if [ $# -lt 1 ] ; then
	exit 1
fi
#######################################################################
File=$1
[ -f $1 ] || exit 1
#######################################################################
_lp=~/.gtranslator/header
_sed=@SED@
_head=@HEAD@
#######################################################################
$_sed -e 's/bit\\n\"$/bit\\n\"___EOH___/' $File > $_lp
cutline=`grep -n ___EOH___ $_lp|sed -e s/:.*$//`
$_head -n $cutline $_lp > $_lp.1
$_sed -e 's/___EOH___//' $_lp.1 > $_lp
[ -f $_lp.1 ] && rm -f $_lp.1
exit 0
#######################################################################
